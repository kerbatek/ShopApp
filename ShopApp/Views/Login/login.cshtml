@model Dictionary<string, string>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Result</title>
</head>
<body>
<div>
    @if (Model.Any())
    {
        @if (Model.TryGetValue("error", out string value))
        {
            <h1>Login failed!</h1>
            <h3>@value</h3>
        }
        else
        {
            <h1>Login successful</h1>
            <h3>Hello @Model["FirstName"] @Model["LastName"]!</h3>
        }
    }
    else
    {
        <p>No result data to display.</p>
    }
    <a href="/core/login" class="btn">Go back</a>
</div>
</body>
</html>